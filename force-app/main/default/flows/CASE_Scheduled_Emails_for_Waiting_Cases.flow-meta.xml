    <formulas>
        <name>ElapsedDaysWeekend</name>
        <dataType>Number</dataType>
        <expression>$Flow.CurrentDate - DATEVALUE({!$Record.Waiting_Start__c})</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>IncrementRelances</name>
        <dataType>Number</dataType>
