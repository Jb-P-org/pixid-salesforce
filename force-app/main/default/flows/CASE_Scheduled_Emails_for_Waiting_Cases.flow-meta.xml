        <scale>0</scale>
    </formulas>
    <formulas>
        <name>WorkedDay</name>
        <dataType>Boolean</dataType>
        <expression>NOT(
  OR(
    TEXT(WEEKDAY($Flow.CurrentDate)) = &quot;1&quot;,  /* Dimanche */
    TEXT(WEEKDAY($Flow.CurrentDate)) = &quot;7&quot;,  /* Samedi */
    TEXT(MONTH($Flow.CurrentDate)) = &quot;1&quot; &amp;&amp; TEXT(DAY($Flow.CurrentDate)) = &quot;1&quot;,   /* 1 Jan */
    TEXT(MONTH($Flow.CurrentDate)) = &quot;12&quot; &amp;&amp; TEXT(DAY($Flow.CurrentDate)) = &quot;25&quot;  /* 25 Dec */
  )
)</expression>
    </formulas>
